<% layout("/layouts/boilerplate") %>

<script>
    window.mapToken = "<%= process.env.MAPTILER_API_KEY %>";
    window.coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
    window.listingData = {
        location: "<%= listing.location %>",
        title: "<%= listing.title %>"
    };
</script>

<div class="container mt-4">

    <!-- Title -->
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <h3><%= listing.title %></h3>
        </div>
    </div>

    <!-- Listing Card -->
   <div class="row justify-content-center mb-4">
        <div class="col-12 col-md-8">
            <div class="card shadow-sm">
                <img src="<%= listing.image.url %>" 
                     class="card-img-top img-fluid" 
                     alt="listing image" 
                     style="max-height: 400px; object-fit: cover;">
                <div class="card-body m-2">
                    <p class="card-text"><strong>Owned by:</strong> <i><%= listing.owner.username %></i></p>
                    <p class="card-text"><%= listing.description %></p>
                    <p class="card-text"><strong>Price:</strong> â‚¹ <%= listing.price.toLocaleString("en-IN") %></p>
                    <p class="card-text"><strong>Location:</strong> <%= listing.location %></p>
                    <p class="card-text"><strong>Country:</strong> <%= listing.country %></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit/Delete Buttons -->
    <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
        <div class="row justify-content-center mb-4">
            <div class="col-12 col-md-10 col-lg-8 d-flex flex-wrap gap-2">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-dark">Delete</button>
                </form>
            </div>
        </div>
    <% } %>

    <!-- Review Form -->
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 mb-3">
            <% if(currUser) { %>
                <hr>
                <h4>Leave a Review</h4>
                <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>

                    <!-- Rating -->
                    <div class="mb-3 mt-3">
                        <label for="rating" class="form-label">Rating</label>
                        <fieldset class="starability-slot">
                            <legend>First rating:</legend>
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>

                    <!-- Comment -->
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea id="comment" name="review[comment]" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please add some comments</div>
                    </div>

                    <button type="submit" class="btn btn-outline-dark">Submit</button>
                </form>
                <hr>
            <% } %>

            <!-- Reviews List -->
            <% if(listing.reviews.length > 0) { %>
                <h5><b>All Reviews</b></h5>
                <div class="row">
                    <% for(let review of listing.reviews) { %>
                        <div class="col-12 col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body m-2">
                                    <h5 class="card-title">@<%= review.author.username %></h5>
                                    <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                                    <p class="card-text"><%= review.comment %></p>
                                </div>
                                <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
                                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="m-3">
                                        <button class="btn btn-sm btn-dark">Delete</button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Map Section -->
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 mb-4">
            <h3>Where you'll be</h3>
            <div id="map" style="width: 100%; height: 400px;"></div>
        </div>
    </div>

</div>

<script src="/js/map.js"></script>
